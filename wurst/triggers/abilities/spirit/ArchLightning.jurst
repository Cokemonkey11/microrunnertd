scope ArchLightning initializer init
	import StructuredDD
	import DamageType

	globals
		constant int ARCH_ID = 'h00A'
	end

	function h()
		unit dS = GetEventDamageSource()
		if GetUnitTypeId(dS) == ARCH_ID and DamageType.get() == DamageType.ATTACK then
			IssueTargetOrder(dS, "forkedlightning", GetTriggerUnit())
		end
	end

	function init()
		StructuredDD.addHandler(function h)
	end
