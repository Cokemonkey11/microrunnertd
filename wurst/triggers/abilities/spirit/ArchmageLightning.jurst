package ArchmageLightning
	import StructuredDD
	import DamageType

	globals
		constant int ARCH_ID = 'h00G'
	end

	function h()
		unit dS = GetEventDamageSource()
		if GetUnitTypeId(dS) == ARCH_ID and DamageType.get() == DamageType.ATTACK
			IssueTargetOrder(dS, "forkedlightning", GetTriggerUnit())
		end
	end

	init
		StructuredDD.addHandler(function h)
	end
