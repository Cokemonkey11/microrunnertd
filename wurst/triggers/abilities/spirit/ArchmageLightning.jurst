scope ArchmageLightning initializer init
	import StructuredDD
	import DamageType

	globals
		private constant integer ARCH_ID = 'h00G'
	end

	private function h takes nothing returns nothing
		unit dS = GetEventDamageSource()
		if GetUnitTypeId(dS) == ARCH_ID and DamageType.get() == DamageType.ATTACK then
			IssueTargetOrder(dS,"forkedlightning",GetTriggerUnit())
		endif
		dS = null
	end

	private function init takes nothing returns nothing
		StructuredDD.addHandler(function h)
	end
