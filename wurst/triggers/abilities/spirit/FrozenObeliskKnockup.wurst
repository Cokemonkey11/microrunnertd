package FrozenObeliskKnockup
import UnitApi
import DamageType
import DamageDetection2
import Knockback3

constant OB_ID = 'h00Y'

function h()
	let dS = GetEventDamageSource()
	let tU = GetTriggerUnit()

	if GetUnitTypeId(dS) == OB_ID and getDamageType() == DamageType.ATTACK and GetUnitAbilityLevel(tU, UnitApi.IMMUNE) < 1
		if Knockback3.getVel(tU).length() == 0.
			Knockback3.add(tU, 500., angle(0.), angle(bj_PI/2.))

init
	addOnDamageFunc(Condition(function h))
