package TinkerHaste
	import DamageType
	import StructuredDD

	constant ARCH_ID = 'h028'

	function h()
		let dS = GetEventDamageSource()

		if GetUnitTypeId(dS) == ARCH_ID and DamageType.get() == DamageType.ATTACK
			IssueImmediateOrder(dS, "berserk")
		end
	end

	init
		StructuredDD.addHandler(function h)
	end
