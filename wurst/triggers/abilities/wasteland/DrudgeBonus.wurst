package DrudgeBonus
import DamageType
import DamageDetection2
import FloatText
import GetUnitArmorType

constant EX_ID = 'h01W'

function h()
	let dS = GetEventDamageSource()
	let tU = GetTriggerUnit()

	if GetUnitTypeId(dS) == EX_ID and getDamageType() == DamageType.ATTACK and getUnitArmorType(tU) == ArmorType.HEAVY_NORMAL
		let r = GetEventDamage()
		dealCodeDamage(dS, tU, r)
		FloatText.bonus(GetUnitX(tU), GetUnitY(tU), R2I(2.*r))

init
	addOnDamageFunc(Condition(function h))
