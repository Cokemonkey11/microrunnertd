package ThallBox
	import RegisterPlayerUnitEvent

	constant int ID_THALL_BOX         = 'h02T'
	constant int ID_UPGRADE_VIGOUR    = 'h02V'
	constant int ID_UPGRADE_SPLENDOR  = 'h02U'
	constant int ID_UPGRADE_SACRIFICE = 'h02W'

	function a()
		unit cons = GetConstructedStructure()

		if cons.getTypeId() == ID_THALL_BOX
			AddUnitToStock(cons, ID_UPGRADE_VIGOUR,    1, 1)
			AddUnitToStock(cons, ID_UPGRADE_SPLENDOR,  1, 1)
			AddUnitToStock(cons, ID_UPGRADE_SACRIFICE, 1, 1)
		end
	end

	init
		registerPlayerUnitEvent(EVENT_PLAYER_UNIT_CONSTRUCT_FINISH, function a)
	end
